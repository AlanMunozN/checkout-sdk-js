{
  "name": "@bigcommerce/checkout-sdk",
  "version": "0.12.1",
  "description": "BigCommerce Checkout JavaScript SDK",
  "license": "MIT",
  "main": "lib/index.js",
  "files": [
    "dist/",
    "docs/",
    "lib/"
  ],
  "engines": {
    "node": "^6.10.0"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/bigcommerce/checkout-sdk-js.git"
  },
  "author": "BigCommerce",
  "bugs": {
    "url": "https://github.com/bigcommerce/checkout-sdk-js/issues"
  },
  "homepage": "https://github.com/bigcommerce/checkout-sdk-js",
  "scripts": {
    "prebuild": "yarn lint && yarn test",
    "build": "yarn compile && yarn bundle",
    "prebundle": "rm -rf dist",
    "bundle": "webpack --config webpack.config.js",
    "bundle:analyze": "yarn bundle -- --profile --json > webpack-stats.json && webpack-bundle-analyzer webpack-stats.json dist --default-sizes gzip",
    "bundle:watch": "yarn bundle -- --watch",
    "precompile": "rm -rf lib",
    "compile": "tsc --outDir lib",
    "compile:watch": "yarn compile -- --watch",
    "lint": "yarn lint:js && yarn lint:ts",
    "lint:js": "eslint src --config eslintrc.json",
    "lint:ts": "tslint 'src/**/*.ts' --config tslint.json && tsc --noEmit",
    "prerelease": "git fetch --tags && yarn validate-dependencies && yarn validate-commits && yarn build",
    "release": "git add dist lib && standard-version -a",
    "test": "jest --config jest-config.js",
    "test:coverage": "yarn test -- --coverage",
    "test:series": "yarn test -- --runInBand",
    "test:watch": "yarn test -- --watch",
    "validate-commits": "validate-commits",
    "validate-dependencies": "yarn install --check-files --frozen-lockfile"
  },
  "dependencies": {
    "@bigcommerce/bigpay-client": "git+ssh://git@github.com/bigcommerce/bigpay-client-js.git#2.10.2",
    "@bigcommerce/data-store": "git+ssh://git@github.com/bigcommerce/data-store-js.git#v0.1.3",
    "@bigcommerce/form-poster": "git+ssh://git@github.com/bigcommerce/form-poster-js.git#1.1.2",
    "@bigcommerce/request-sender": "git+ssh://git@github.com/bigcommerce/request-sender-js.git#v0.1.1",
    "@bigcommerce/script-loader": "git+ssh://git@github.com/bigcommerce/script-loader-js.git#v0.1.2",
    "@types/lodash": "^4.14.92",
    "lodash": "^4.17.4",
    "memoizee": "^0.4.11",
    "messageformat": "0.3.0",
    "rxjs": "^5.5.5",
    "tslib": "^1.8.0"
  },
  "devDependencies": {
    "@types/jest": "^21.1.10",
    "@types/node": "^6.0.101",
    "eslint": "2.8.0",
    "eslint-config-airbnb": "6.0.2",
    "eslint-plugin-react": "4.1.0",
    "jest": "^21.2.1",
    "standard-version": "^4.2.0",
    "ts-jest": "^21.2.3",
    "ts-loader": "^3.2.0",
    "tslint": "^5.9.1",
    "typescript": "^2.7.1",
    "typescript-eslint-parser": "^9.0.1",
    "uglifyjs-webpack-plugin": "^1.1.1",
    "validate-commits": "git+ssh://git@github.com/bigcommerce-labs/validate-commits.git#1.1.0",
    "webpack": "^3.8.1",
    "webpack-bundle-analyzer": "^2.9.1"
  }
}
